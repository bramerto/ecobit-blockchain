@using System.ComponentModel
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - WebApplication</title>
  <link rel="stylesheet" href="~/Content/site.css" />
  <!-- Custom styles for this template -->
  <link href="~/Content/simple-sidebar.css" rel="stylesheet">
  <link rel="stylesheet" href="~/Content/bootstrap.css" />
  <link rel="stylesheet" href="~/Content/bootstrap-grid.css" />
  <link rel="stylesheet" href="~/Content/bootstrap-reboot.css" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" 
        integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" 
        crossorigin="anonymous">
  <environment names="Development">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/site.js" ></script>
  </environment>
</head>
<body>
<div id="wrapper">
            

  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <a href="#">
          Menu
        </a>
      </li>
      @if (HttpContext.Current.Session["Username"] != null)
      {
        <li>
          User @HttpContext.Current.Session["Username"]
        </li>
      }
     
      <li>
        <a href="#">Home</a>
      </li>
      <li>
        <a href="#">Profile</a>
      </li>
      <li>
        <a href="/User">Users</a>
      </li>
      <li>
        <a href="/Batch">Batch</a>
      </li>
      <li>
        <a href="#">About</a>
      </li>
      <li>
        <a href="#">Contact</a>
      </li>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->
  
<!-- Page Content -->
  <div id="page-content-wrapper">
    <div>
      <!-- Top Bar -->
      <div class="navbar navbar-dark bg-dark">
        <div class="container">
          <div href="#menu-toggle" id="menu-toggle" class="navbar-brand">  
            <i class="fa fa-cubes" > </i> Ecobit Blockchain            
          </div>
          @if (HttpContext.Current.Session["Username"] != null)
          {
            <ul class="nav navbar-nav navbar-right">
              <a class="btn btn-success" href="@Url.Action("LogOut", "Account")">Log out</a>
            </ul>
          }
        </div>
      </div>
      <!-- #Top Bar -->
    
      <!-- Footer -->
      <div class="container body-content mt-4">
        @RenderBody()
        <hr/>
        <footer>
          <p>&copy; 2018 - Ecobit Blockchain</p>
        </footer>
      </div>
      <!-- #Footer -->
        
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
@RenderSection("scripts", required: false)
<script>
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>

</body>
</html>
